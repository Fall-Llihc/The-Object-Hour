# PostgreSQL Supabase Database Configuration Template
# Copy this file to db.properties and fill in your actual credentials

# Database Connection
db.url=jdbc:postgresql://your-supabase-host:5432/postgres?sslmode=require
db.user=postgres.your_project_ref
db.password=your_database_password
db.driver=org.postgresql.Driver

# Supabase Storage configuration
# Set your Supabase project URL (example: https://yourprojectref.supabase.co)
supabase.url=https://your-project-ref.supabase.co

# Service role key (required to upload files from server)
# Prefer setting via environment variable SUPABASE_SERVICE_KEY
supabase.service.key=your_service_role_key_here

# Storage bucket name used for product images
supabase.bucket=your_bucket_name